{
  "manifest_version": 2,

  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "0.0",

  "icons": {
      "16": "images/icons/16.png",
      "48": "images/icons/48.png",
      "128": "images/icons/128.png"
  },

  "default_locale": "en",

  "content_scripts": [
      {
          "matches": [ "*://*/*" ],
          "css": [ "styles/main.css" ],
          "js": [
              "scripts/require.js",
              "scripts/main.js",
              "scripts/index.js"
          ]
      }
  ],

  "web_accessible_resources": [
      "images/spotify.png"
  ],

  "permissions": [
      "*://*.whyd.com/*",
      "*://*.soundcloud.com/*"
  ]
}
